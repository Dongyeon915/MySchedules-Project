<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.my_schedules.dao.MemberDAO">

  <insert id="setMember" parameterType="com.example.my_schedules.dto.MemberDTO" keyProperty="userId" useGeneratedKeys="true" keyColumn="userId">
    insert into member values(null,#{userEmail},#{userPassword},#{joinDate})
  </insert>

  <select id="getMember" resultType="com.example.my_schedules.dto.MemberDTO">
    select * from member
  </select>

<!-- 이메일 중복확인 -->
  <select id="emailCheck" resultType="com.example.my_schedules.dto.MemberDTO">
    select * from member where email = #{userEmail}
  </select>
</mapper>